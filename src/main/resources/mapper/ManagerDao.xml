<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="om.huangting.electricity.dao.ManagerDao">
<insert id="add" parameterType="Manager">
     insert ignore into 
     manager
     values(null,#{name},#{password},null,null,#{permission}, )
   </insert>   
  
   <delete id="deleteManagerById" parameterType="Integer">
      delete from 
      manager
      where id=#{id}
   </delete>
  
   <update id="updateManager" parameterType="Manager">
      update 
      manager
      set 
        <set >  
      <if test="name != null" >  
        manager.name = #{manager.name},  
      </if>  
      <if test="password != null" >  
        manager.password = #{manager.password},  
      </if>  
      <if test="permission != null" >  
        manager.permission = #{manager.permission},  
      </if>  
    </set>  
    where id = #{manager.id} 
   </update>
   
   <select id="queryManagerByPermission" parameterType="Integer" resultType="Manager">
    select * 
    from
    manager 
    where permission=#{manager.permission}
   </select>
   
   <select id="queryManagerById" parameterType="Integer">
   select * from manager where id=#{manager.id}
   </select>
</mapper>