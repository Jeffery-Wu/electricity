<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="om.huangting.electricity.dao.ElectricityAccountDao">
<insert id="add" parameterType="ElectricityAccount">
     insert ignore into 
     electricity_account
     values(null,#{dormitoryId},#{balance},#{remainingBattery})
   </insert>   

   <update id="updateElectricityAccount" parameterType="ElectricityAccount">
      update 
      electricity_account
      set 
        <set >  
      <if test="dormitoryId != null" >  
        electricity_account.dormitoryId = #{electricity_account.dormitoryId},  
      </if>  
      <if test="balance != null" >  
        electricity_account.balance = #{electricity_account.balance},  
      </if>  
      <if test="remainingBattery != null" >  
        electricity_account.remainingBattery = #{electricity_account.remainingBattery},  
      </if>  
    </set>  
    where id = #{electricity_account.id} 
   </update>
</mapper>